<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="examen.fapte_bune.gui.RegisterController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="numeField" promptText="Nume"/>
    <TextField fx:id="prenumeField" promptText="Prenume"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="parolaField" promptText="Parola"/>
    <PasswordField fx:id="confirmParolaField" promptText="Confirmă parola"/>
    <ComboBox fx:id="orasComboBox" promptText="Oraș" maxWidth="Infinity"/>
    <TextField fx:id="stradaField" promptText="Strada"/>
    <TextField fx:id="numarStradaField" promptText="Număr stradă"/>
    <TextField fx:id="telefonField" promptText="Telefon"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Înregistrare" onAction="#handleRegister"/>
        <Button text="Anulează" onAction="#handleCancel"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="RED"/>
</VBox>